<GuiXml>
  <Controls>
    <!-- Every control's name must be _unique_. -->
    <TopLevelControl name="XLGB_UI_Control" clampedToScreen="true" movable="true" mouseEnabled="true" hidden="true" resizeHandleSize="10">

      <Dimensions x="350" y="600"/>
      <DimensionConstraints  minX="350" minY="200"/>
      <Anchor point="CENTER" relativeTo="GUI_ROOT" relativePoint="CENTER" offsetX="-125" offsetY="-140" />
      <OnMoveStop> XLGB_UI.XLGB_UI_Control_OnMoveStop()</OnMoveStop>
      <Controls>
        <Backdrop name="$(parent)_BG" inherits="ZO_DefaultBackdrop"><AnchorFill/></Backdrop>

        <!-- Escape button:-->
            <Button name="$(parent)_Hide" inherits="ZO_ButtonBehaviorClickSound" >

              <OnClicked>XLGB_UI.HideUI()</OnClicked>

              <Dimensions x="30" y="30" />                                
              <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" offsetY="10"  />
              <Textures
                  normal    ="/esoui/art/buttons/decline_up.dds"
                  pressed    ="/esoui/art/buttons/decline_down.dds"
                  mouseOver  ="/esoui/art/buttons/decline_over.dds"
                />  
            </Button>
        
<!-- Toolbar -->
        <Control name="$(parent)_ToolBar" mouseEnabled="true" resizeToFitDescendents="false">
          <Dimensions x="350" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="10" offsetY="30"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" offsetY="60"/>
          <Controls>

    <!-- Cycle left button:-->
            <Button name="$(parent)_PreviousSet" inherits="ZO_ButtonBehaviorClickSound" >

              <OnClicked>XLGB_UI.CycleLeft()</OnClicked>

              <Dimensions x="30" y="30" />                  
              <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"  offsetX="15" offsetY="0" />
              <Textures
                  normal    ="/esoui/art/buttons/leftarrow_up.dds"
                  pressed    ="/esoui/art/buttons/leftarrow_down.dds"
                  mouseOver  ="/esoui/art/buttons/leftarrow_over.dds"
                />  
            </Button>

    <!-- Title -->
            <Label name="$(parent)_Title" font="ZoFontAnnounceMedium" text="XL Gear Banker" mouseEnabled="true">
              <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="-15" offsetY="0"  />
            </Label>

    <!-- Cycle right button:-->
            <Button name="$(parent)_NextSet" inherits="ZO_ButtonBehaviorClickSound" >

              <OnClicked>XLGB_UI.CycleRight()</OnClicked>

              <Dimensions x="30" y="30" />                  
              <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"  offsetX="-45" offsetY="0" />
              <Textures
                  normal    ="/esoui/art/buttons/rightarrow_up.dds"
                  pressed    ="/esoui/art/buttons/rightarrow_down.dds"
                  mouseOver  ="/esoui/art/buttons/rightarrow_over.dds"
                />  
            </Button>

          </Controls>
        </Control>

    
  
<!-- List Holder -->
        <Control name="$(parent)_ListView" mouseEnabled="true" resizeToFitDescendents="false">
					<DimensionConstraints  minY="52"/>
					<Anchor point="TOPLEFT" relativeTo="$(parent)_ToolBar" relativePoint="BOTTOMLEFT" offsetX="20" offsetY="20"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-35" offsetY="-10"/>
					<!-- <OnMouseWheel>IIfA:GuiOnScroll(self, delta)</OnMouseWheel>-->
					<Controls>

  <!-- GearSet name -->
            <Label name="$(parent)GearTitle" font="ZoFontAnnounceMedium" text="Test Set" >
              <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0"  />
            </Label>

  <!-- List Slider-->
						<Slider name="$(parent)_Slider" mouseEnabled="true" step="1" inherits="ZO_VerticalScrollbarBase">
							<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="16" offsetY="54"/>
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="23" offsetY="-14"/>

							<OnMouseDown>self.locked=false</OnMouseDown>
							<OnMouseUp>self.locked=true</OnMouseUp>
							<!--<OnValueChanged>IIfA:GuiOnSliderUpdate(self, value)</OnValueChanged>-->
						</Slider>

						<Control name="$(parent)_Counts" verticalAlignment="LEFT">
							<Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetY="6" />
							<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetY="6" />
							<Dimensions y="26" />
							<Controls>
								<Label name="$(parent)_Items" mouseEnabled="false" font="ZoFontGameSmall" text="Items" >
									<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0"/>
									<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="0" offsetY="0"/>
								</Label>
								<Label name="$(parent)_Slots" mouseEnabled="false" font="ZoFontGameSmall" text="Slots" >
									<Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="0" offsetY="0"/>
									<Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOM" offsetX="0" offsetY="0"/>
								</Label>
							</Controls>
						</Control>

					</Controls>

				</Control>
      </Controls>
    </TopLevelControl>

    <Control name="XLGB_SlotTemplate" inherits="ZO_ListInventorySlotBehavior" virtual="true" mouseEnabled="true">
      <Dimensions x="300" y="52" />
      <Controls>
        <Texture name="$(parent)Bg" textureFile="EsoUI/Art/Miscellaneous/listItem_backdrop.dds" alpha="0.4">
          <AnchorFill />
          <TextureCoords left="0" right="1" top="0" bottom=".8125" />
        </Texture>
        <Label name="$(parent)Name" font="ZoFontGameShadow" wrapMode="ELLIPSIS" verticalAlignment="CENTER">
          <Dimensions y="30" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="20" offsetY="0"/>
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-50" offsetY="0"/>
        </Label>

        <!-- Escape button:-->
        <Button name="$(parent)RemoveItem" inherits="ZO_ButtonBehaviorClickSound" >

          <OnClicked>UI.RemoveItem(self)</OnClicked>

          <Dimensions x="20" y="20" />                                
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" offsetY="5"  />
          <Textures
              normal    ="/esoui/art/buttons/decline_up.dds"
              pressed    ="/esoui/art/buttons/decline_down.dds"
              mouseOver  ="/esoui/art/buttons/decline_over.dds"
            />  
        </Button>

        
      </Controls>
    </Control>
  </Controls>
</GuiXml>