<GuiXml>
  <Controls>
    <!-- Every control's name must be _unique_. -->
    <TopLevelControl name="XLGB_Window_Control" clampedToScreen="true" movable="true" mouseEnabled="true" hidden="true" resizeHandleSize="10">

      <Dimensions x="350" y="600"/>
      <DimensionConstraints  minX="350" minY="200"/>
      <Anchor point="CENTER" relativeTo="GUI_ROOT" relativePoint="CENTER" offsetX="-125" offsetY="-140" />
      <OnMoveStop> XLGB_UI:XLGB_Window_Control_OnMoveStop()</OnMoveStop>
      <Controls>
        <Backdrop name="$(parent)_BG" inherits="ZO_DefaultBackdrop"><AnchorFill/></Backdrop>

        <!-- Escape button:-->
            <Button name="$(parent)_Hide" inherits="ZO_ButtonBehaviorClickSound" >

              <OnClicked>XLGB_UI:HideUI()</OnClicked>

              <Dimensions x="30" y="30" />                                
              <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" offsetY="10"  />
              <Textures
                  normal    ="/esoui/art/buttons/decline_up.dds"
                  pressed    ="/esoui/art/buttons/decline_down.dds"
                  mouseOver  ="/esoui/art/buttons/decline_over.dds"
                />  
            </Button>
        
<!-- Toolbar -->
        <Control name="$(parent)_ToolBar" mouseEnabled="true" resizeToFitDescendents="false">
          <Dimensions x="350" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="10" offsetY="30"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-10" offsetY="60"/>
          <Controls>

    <!-- Cycle left button:-->
            <Button name="$(parent)_PreviousSet" inherits="ZO_ButtonBehaviorClickSound" >

              <OnClicked>XLGB_UI:CycleLeft()</OnClicked>
              <Dimensions x="30" y="30" />                  
              <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT"  offsetX="15" offsetY="0" />
              <Textures
                  normal     ="/esoui/art/buttons/leftarrow_up.dds"
                  pressed    ="/esoui/art/buttons/leftarrow_down.dds"
                  mouseOver  ="/esoui/art/buttons/leftarrow_over.dds"
                />  
            </Button>

    <!-- Title -->
            <Label name="$(parent)_Title" font="ZoFontAnnounceMedium" text="XL Gear Banker" mouseEnabled="true">
              <Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="-15" offsetY="0"  />
            </Label>

    <!-- Cycle right button:-->
            <Button name="$(parent)_NextSet" inherits="ZO_ButtonBehaviorClickSound" >

              <OnClicked>XLGB_UI:CycleRight()</OnClicked>

              <Dimensions x="30" y="30" />                  
              <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT"  offsetX="-45" offsetY="0" />
              <Textures
                  normal     ="/esoui/art/buttons/rightarrow_up.dds"
                  pressed    ="/esoui/art/buttons/rightarrow_down.dds"
                  mouseOver  ="/esoui/art/buttons/rightarrow_over.dds"
                />  
            </Button>

          </Controls>
        </Control>


        <Control name="$(parent)_ListView" mouseEnabled="true" resizeToFitDescendents="false">
					<DimensionConstraints  minY="30"/>
					<Anchor point="TOPLEFT" relativeTo="$(parent)_ToolBar" relativePoint="BOTTOMLEFT" offsetX="20" offsetY="20"/>
					<Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-35" offsetY="-10"/>
					<Controls>

        <!-- Gear Title -->
            <EditBox name="$(parent)_GearTitle" inherits="ZO_DefaultEdit ZO_EditDefaultText" text="Test Set" mouseEnabled="false">
              <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0"  />
              <Dimensions x="200" y="30" />
                <OnFocusGained>XLGB_UI:SelectEntireTextbox(self)</OnFocusGained>
            </EditBox>

        <!-- Add New Set Button -->
            <Button name="$(parent)_AddSet" inherits="ZO_ButtonBehaviorClickSound" >
              <OnClicked>XLGB_UI:AddSet(self)</OnClicked>
              <Dimensions x="20" y="20" />                                
              <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="22" offsetY="0"  />
              <Textures
                  normal    ="/esoui/art/buttons/plus_up.dds"
                  pressed    ="/esoui/art/buttons/plus_down.dds"
                  mouseOver  ="/esoui/art/buttons/plus_over.dds"
                />  
            </Button> 

        <!-- Edit Button -->
            <Button name="$(parent)_Edit" inherits="ZO_ButtonBehaviorClickSound" >
              <OnClicked>XLGB_UI:ToggleEdit(self)</OnClicked>
              <Dimensions x="20" y="20" />                                
              <Anchor point="TOPRIGHT" relativeTo="$(parent)_AddSet" relativePoint="TOPLEFT" offsetX="-20" offsetY="0"  />
              <Textures
                  normal    ="/esoui/art/buttons/edit_up.dds"
                  pressed    ="/esoui/art/buttons/edit_down.dds"
                  mouseOver  ="/esoui/art/buttons/edit_over.dds"
                />  
            </Button>

        <!-- Accept Button -->
            <Button name="$(parent)_AcceptEdit" inherits="ZO_ButtonBehaviorClickSound" hidden="true" >
              <OnClicked>XLGB_UI:AcceptEdit(self)</OnClicked>
              <Dimensions x="20" y="20" />                                
              <Anchor point="TOPRIGHT" relativeTo="$(parent)_Edit" relativePoint="TOPLEFT" offsetX="-20" offsetY="0"  />
              <Textures
                  normal    ="/esoui/art/buttons/accept_up.dds"
                  pressed    ="/esoui/art/buttons/accept_down.dds"
                  mouseOver  ="/esoui/art/buttons/accept_over.dds"
                />  
            </Button> 

            <!-- junk -->

        <!-- Scroll List -->
            <Control name="$(parent)_ScrollList" inherits="ZO_ScrollList">
              <Anchor point="TOPLEFT" relativeTo="$(parent)_GearTitle" relativePoint="BOTTOMLEFT" offsetX="0" offsetY="10" />
              <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="20" offsetY="-10" />
            </Control>

					</Controls>

				</Control>
      </Controls>
    </TopLevelControl>

    <Control name="XLGB_Item_Row_Template" virtual="true" >
      <Controls>
        <Label name="$(parent)_Name" font="ZoFontWinT2" text="Some Test Label" linkEnabled="true">
              <Anchor point="TOPLEFT" offsetX="10" offsetY="10" />
        </Label>

        <Button name="$(parent)_Remove" inherits="ZO_ButtonBehaviorClickSound" >
          <OnClicked>XLGB_UI.RemoveItem(self)</OnClicked>
          <Dimensions x="20" y="20" />                                
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-20" offsetY="5"  />
          <Textures
              normal    ="/esoui/art/buttons/decline_up.dds"
              pressed    ="/esoui/art/buttons/decline_down.dds"
              mouseOver  ="/esoui/art/buttons/decline_over.dds"
            />  
        </Button>
      </Controls>
    </Control>



  </Controls>
</GuiXml>